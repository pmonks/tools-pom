{:deps
   {org.clojure/data.xml                  {:mvn/version "0.2.0-alpha6"}
    io.github.clojure/tools.build         {:git/tag "v0.6.2" :git/sha "226fb52"}
    clj-xml-validation/clj-xml-validation {:mvn/version "1.0.2"}
    camel-snake-kebab/camel-snake-kebab   {:mvn/version "0.4.2"}
    com.github.pmonks/tools-convenience   {:mvn/version "1.0.33"}}
 :aliases
   {; ---- TOOL ALIASES ----

    ; clj -T:build <taskname>
    :build
      {:deps       {io.github.seancorfield/build-clj    {:git/tag "v0.5.2" :git/sha "8f75b81"}
                    com.github.pmonks/pbr               {:mvn/version "2.0.99"}
                    com.github.pmonks/tools-convenience {:mvn/version "1.0.33"}   ; Override whatever PBR pulls in with the latest & greatest
                    com.github.pmonks/tools-pom         {:local/root "."}}        ; Override whatever PBR pulls in with the latest & greatest
       :ns-default build}


    ; ---- MAIN FUNCTION ALIASES ----

    ; clj -M:check
    :check
      {:extra-deps {com.github.athos/clj-check {:git/sha "518d5a1cbfcd7c952f548e6dbfcb9a4a5faf9062"}}
       :main-opts  ["-m" "clj-check.check"]}

    ; clj -M:kondo
    :kondo
      {:extra-deps {clj-kondo/clj-kondo {:mvn/version "2021.10.19"}}
       :main-opts  ["-m" "clj-kondo.main" "--lint" "src"]}

    ; clj -M:eastwood
    :eastwood
      {:extra-deps {jonase/eastwood {:mvn/version "0.9.9"}}
       :main-opts  ["-m" "eastwood.lint" "{:source-paths,[\"src\"]}"]}

    ; clj -M:outdated
    :outdated
      {:extra-deps {com.github.liquidz/antq {:mvn/version "1.1.0"}}
       :main-opts  ["-m" "antq.core"]}

    ; clj -X:codox
    :codox
      {:extra-deps {codox/codox {:mvn/version "0.10.8"}}
       :exec-fn    codox.main/generate-docs
       :exec-args  {:source-paths ["src"]
                    :source-uri   "https://github.com/pmonks/tools-pom/blob/main/{filepath}#L{line}"}}
   }}
